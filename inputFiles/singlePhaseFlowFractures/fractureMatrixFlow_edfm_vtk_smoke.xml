<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./fractureMatrixFlow_edfm_vtk.xml" />
  </Included>

  <Mesh>
        <VTKMesh
                name="mesh1"
                useGlobalIds="1"
                embeddedSurfaceBlocks="{edfm_vtk_fractures}"
                file="./main_edfm_vtk.vtm"/>
  </Mesh>

  <Geometry>
    <Box
      name="source"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{ 0.34, 0.34, 0.51 }"/>

    <Box
      name="sink"
      xMin="{ 0.65, 0.65, 0.49 }"
      xMax="{ 1.01, 1.01, 1.01 }"/>

  </Geometry>

  <Events
    maxTime="2e3"
    logLevel="3">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGenerator"/>

    <PeriodicEvent
      name="solverApplications"
      forceDt="1e3"
      target="/Solvers/SinglePhaseFlow"/>

    <PeriodicEvent
      name="outputs"
      target="/Outputs/vtkOutput"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="1e3"
      target="/Outputs/sidreRestart"/>
  </Events>

  <Outputs>
    <VTK
      name="vtkOutput"
      plotFileRoot="fracMatFlow_edfm_horizontal"
      plotLevel="2"
      format="ascii"/>

    <Restart
      name="sidreRestart"/>
  </Outputs>
</Problem>
