<Problem>

  <Mesh>
    <InternalMesh
      name="backgroundGrid"
      elementTypes="{ C3D8 }"
      xCoords="{-1.5,1.5}"
      yCoords="{-1.5,1.5}"
      zCoords="{-1.5,1.5}"
      nx="{3}"
      ny="{3}"
      nz="{3}"
      periodic="{ 0, 0, 0}"
      cellBlockNames="{ cb1 }"/>
      
    <ParticleMesh
      name="particles"
      particleFile="mpmParticleFile_singleParticle"
      particleBlockNames="{ pb0 }"
      particleTypes="{ CPDI }"/>
  </Mesh>

  <ElementRegions>
    <CellElementRegion
      name="CellRegion1"
      meshBody="backgroundGrid"
      cellBlocks="{ cb1 }"
      materialList="{ null }"/>
  </ElementRegions>

  <ParticleRegions>
    <ParticleRegion
        name="ParticleRegion1"
        meshBody="particles"
        particleBlocks="{ pb0 }"
        materialList="{ testMaterial }"/>
  </ParticleRegions>

  <Solvers
    gravityVector="{ 0.0, 0.0, 0.0 }">
    <SolidMechanics_MPM
      name="mpmsolve"
      discretization="FE1"
      targetRegions="{ backgroundGrid/CellRegion1, particles/ParticleRegion1 }"
      timeIntegrationOption="ExplicitDynamic"
      updateMethod="FLIP"
      cflFactor="0.25"
      initialDt="1e-16"
      boundaryConditionTypes="{0, 0, 0, 0, 0, 0}">

    </SolidMechanics_MPM>
  </Solvers>

  <Constitutive>
    <ElasticIsotropic
      name="null"
      defaultDensity="1000"
      defaultBulkModulus="1.0e9"
      defaultShearModulus="1.0e9"/>
    
    <ElasticIsotropic
    	name="testMaterial"
    	defaultDensity="1000"
    	defaultBulkModulus="10.0e9"
    	defaultShearModulus="10.0e9"/>
    
  </Constitutive>

  <Events
    maxTime="0.1">
    <PeriodicEvent
      name="solverApplications"
      target="/Solvers/mpmsolve"/>
    <PeriodicEvent
      name="outputs"
      timeFrequency="0.001"
      target="/Outputs/vtkOutput"/>
    <PeriodicEvent
      name="restart"
      timeFrequency="0.001"
      target="/Outputs/restartOutput"/> 
    <HaltEvent
      maxRuntime="300.0"/>
  </Events>

  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"/>
    </FiniteElements>
  </NumericalMethods>

  <Outputs>
    <VTK
      name="vtkOutput"
      format="ascii"/>
    <Restart
      name="restartOutput"/>
  </Outputs>

</Problem>

